@page "/products"
@rendermode InteractiveServer
@using WarehouseX.DTOs
@inject WarehouseX.Services.IProductService ProductService
@inject NavigationManager Navigation
@inject Microsoft.JSInterop.IJSRuntime JS

<h3>Product List</h3>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Product</button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>SKU</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.SKU</td>
                    <td>@p.QuantityInStock</td>
                    <td>
                        <button class="btn btn-sm btn-secondary me-1" @onclick="() => EditProduct(p.ProductId)">Edit</button>
                        <button class="btn btn-sm btn-danger me-1" @onclick="() => DeleteProduct(p.ProductId)">Delete</button>
                        <button class="btn btn-sm btn-info" @onclick="() => ViewHistory(p.ProductId)">History</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ProductDTO>? products;

    protected override async Task OnInitializedAsync()
    {
        await ReloadProducts();
    }

    private async Task ReloadProducts()
    {
        products = (await ProductService.GetAllAsync()).ToList();
        StateHasChanged();
    }

    private void ShowAddForm()
    {
        Navigation.NavigateTo("/products/edit");
    }

    private void EditProduct(int id)
    {
        Navigation.NavigateTo($"/products/edit/{id}");
    }

    private async Task DeleteProduct(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", new object[] { $"Delete product #{id}?" }))
        {
            await ProductService.DeleteAsync(id);
            await ReloadProducts();
        }
    }

    private void ViewHistory(int id)
    {
        Navigation.NavigateTo($"/products/history/{id}");
    }
}
