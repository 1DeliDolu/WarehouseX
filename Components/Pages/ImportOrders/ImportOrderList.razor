@page "/import-orders"
@inject WarehouseX.Services.IImportOrderService ImportOrderService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<h3>Import Orders</h3>

@if (orders == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <button class="btn btn-primary mb-2" @onclick="ShowAddForm">Add Import Order</button>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Supplier</th>
                <th>Description</th>
                <th>Items</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in orders)
            {
                <tr>
                    <td>@o.ImportDate.ToShortDateString()</td>
                    <td>@o.SupplierName</td>
                    <td>@o.Description</td>
                    <td>@o.Items.Count</td>
                    <td>
                        <button class="btn btn-sm btn-secondary me-1" @onclick="() => EditOrder(o.ImportOrderId)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteOrder(o.ImportOrderId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WarehouseX.DTOs.ImportOrderDTO>? orders;

    protected override async Task OnInitializedAsync()
    {
        await ReloadOrders();
    }

    private async Task ReloadOrders()
    {
        orders = (await ImportOrderService.GetAllAsync()).ToList();
        StateHasChanged();
    }

    private void ShowAddForm()
    {
        Navigation.NavigateTo("/importorders/edit");
    }

    private void EditOrder(int id)
    {
        Navigation.NavigateTo($"/importorders/edit/{id}");
    }

    private async Task DeleteOrder(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Delete import order #{id}?") )
        {
            await ImportOrderService.DeleteAsync(id);
            await ReloadOrders();
        }
    }

    [Inject] IJSRuntime JS { get; set; } = default!;
}
